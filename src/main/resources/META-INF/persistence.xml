<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="tiendaDebatesPU" transaction-type="JTA">
        <description>Persistence Unit para Tienda de Debates</description>
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>java:app/jdbc/tiendaDebatesDS</jta-data-source>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <!-- Configuración específica de EclipseLink -->
            <property name="eclipselink.target-database" value="MySQL"/>
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.parameters" value="true"/>
            
            <!-- Delimitadores para identificadores -->
            <property name="eclipselink.jpa.uppercase-column-names" value="false"/>
            
            <!-- No crear tablas automáticamente -->
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            <property name="eclipselink.ddl-generation" value="none"/>
            
            <!-- Compatibilidad -->
            <property name="eclipselink.weaving" value="static"/>
            <property name="eclipselink.deploy-on-startup" value="true"/>
        </properties>
    </persistence-unit>
</persistence>